prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: libcrafter
Description: A C++ Packet manipulation library.
Version: 0.1
URL: http://www.openismus.com/documents/linux/building_libraries/building_libraries
Libs: -L${libdir} -lcrafter-0.1
Cflags: -I${includedir}/crafter-0.1 -I${libdir}/crafter-@crafter_API_VERSION@/include
